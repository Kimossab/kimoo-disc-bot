{
  "env": {
    "browser": false,
    "es2021": true
  },
  "ignorePatterns": [
    "./src/types/discord/*"
  ],
  "extends": [
    "plugin:@stylistic/all-extends"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@stylistic"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "./tsconfig.json"
        ]
      }
    }
  ],
  "rules": {
    "@stylistic/linebreak-style": "off",
    "@stylistic/object-curly-spacing": [
      "error",
      "always"
    ],
    "@stylistic/indent": [
      "error",
      2
    ],
    "@stylistic/function-call-argument-newline": [
      "error",
      "consistent"
    ],
    "@stylistic/padded-blocks": [
      "error",
      "never"
    ],
    "@stylistic/array-element-newline": [
      "error",
      "consistent"
    ],
    "@stylistic/dot-location": [
      "error",
      "property"
    ],
    "@stylistic/newline-per-chained-call": [
      "error",
      {
        "ignoreChainWithDepth": 2
      }
    ],
    "@stylistic/quote-props": [
      "error",
      "as-needed"
    ],
    "@stylistic/multiline-ternary": [
      "error",
      "always-multiline"
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}